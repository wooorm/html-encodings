{
  "name": "html-encodings",
  "version": "2.0.0",
  "description": "List of known HTML character encoding labels",
  "license": "MIT",
  "keywords": [
    "html",
    "dom",
    "character",
    "encoding"
  ],
  "repository": "https://github.com/wooorm/html-encodings",
  "bugs": "https://github.com/wooorm/html-encodings/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "files": [
    "index.js",
    "groups.json"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^13.0.0",
    "concat-stream": "^1.5.1",
    "esmangle": "^1.0.1",
    "lodash.flatmap": "^4.2.0",
    "remark-cli": "^2.0.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.4.0",
    "xo": "^0.17.0"
  },
  "scripts": {
    "build-crawl": "node build",
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s htmlEncodings > html-encodings.js",
    "build-mangle": "esmangle html-encodings.js > html-encodings.min.js",
    "build": "npm run build-crawl && npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test": "npm run build && npm run lint && npm run test-api"
  },
  "xo": {
    "space": true,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "html-encodings.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "presets": "wooorm"
  }
}
